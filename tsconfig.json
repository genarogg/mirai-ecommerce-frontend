{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@fn/*": [
        "./src/functions/*"
      ],
      "@query": [
        "./src/graphql/query/index.ts"
      ],
      "@env": [
        "./env.ts"
      ],
      "@public/*": [
        "./public/*"
      ],
      "@nano": [
        "./src/components/nano"
      ],
      "@hook/*": [
        "./src/hook/*"
      ],

    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "aggPath.js"
, "src/app/api/graphql/graphql.js"  ],
  "exclude": [
    "node_modules"
  ]
}